# .env.example
# Copy to .env and fill in your values

# API Authentication
API_TOKEN=your-secure-api-token-here

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Learning Record Store Configuration
LRS_ENDPOINT=https://your-lrs.com/xapi
LRS_TOKEN=your-lrs-authentication-token

# Webhook Configuration  
WEBHOOK_ENDPOINT=https://your-webhook-endpoint.com/webhook
WEBHOOK_TOKEN=your-webhook-authentication-token

# Optional: Custom port (default is 8000)
PORT=8000
